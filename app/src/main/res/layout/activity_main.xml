<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- 4 columns -->
    <TableRow
            android:layout_width="match_parent"
            android:background="#FF727171"
            android:layout_height="match_parent" android:layout_weight="0.3"/>
    <TableRow
            android:layout_width="match_parent"
            android:background="#FF727171"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" android:id="@+id/tvSum" android:textSize="36sp"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="AC"
                android:layout_width="wrap_content"
                android:layout_span="3"
                android:onClick="btnOnClick"
                android:background="#C4C1C1"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:layout_height="wrap_content" android:id="@+id/buttonAC"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:onClick="btnOnOpClick"
                android:background="@android:color/holo_orange_light"
                android:layout_height="wrap_content" android:id="@+id/buttonDivide"
                android:layout_marginBottom="2dip" android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom">
        <Button
                android:id="@+id/button07"
                android:onClick="btnOnClick"
                android:text="7" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button08"
                android:onClick="btnOnClick"
                android:text="8" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button09"
                android:onClick="btnOnClick"
                android:text="9" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/buttonTimes"
                android:onClick="btnOnOpClick"
                android:background="@android:color/holo_orange_light"
                android:text="*" android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="bottom">
        <Button
                android:id="@+id/button04"
                android:onClick="btnOnClick"
                android:text="4" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button05"
                android:onClick="btnOnClick"
                android:text="5" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button06"
                android:onClick="btnOnClick"
                android:text="6" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/buttonMinus"
                android:onClick="btnOnOpClick"
                android:background="@android:color/holo_orange_light"
                android:text="-" android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="bottom">
        <Button
                android:id="@+id/button01"
                android:onClick="btnOnClick"
                android:text="1" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button02"
                android:onClick="btnOnClick"
                android:text="2" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/button03"
                android:onClick="btnOnClick"
                android:text="3" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/buttonPlus"
                android:onClick="btnOnOpClick"
                android:background="@android:color/holo_orange_light"
                android:text="+" android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="2dip"
            android:layout_height="match_parent" android:id="@+id/row4">
        <Button
                android:id="@+id/button00"
                android:onClick="btnOnClick"
                android:layout_span="2"
                android:text="0" android:background="#C4C1C1" android:layout_marginRight="2dip"/>
        <Button
                android:id="@+id/buttonDot"
                android:onClick="btnOnClick"
                android:text="." android:background="#C4C1C1" android:layout_marginRight="2dip"/>

        <Button
                android:id="@+id/buttonEquals"
                android:onClick="btnEqualsClick"
                android:background="@android:color/holo_orange_light"
                android:text="=" android:layout_weight="1"/>
    </TableRow>
</TableLayout>
